{
  "version": 2,
  "buildCommand": "npm run build",
  "functions": {
    "api/handler.ts": {
      "maxDuration": 60
    }
  },
  "static": {
    "dist/public": {
      "maxAge": 3600
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/handler"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/dist/public/assets/$1"
    },
    {
      "src": ".*",
      "dest": "/dist/public/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}